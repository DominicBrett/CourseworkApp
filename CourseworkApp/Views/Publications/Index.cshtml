@model IEnumerable<CourseworkApp.Models.Publication>

@{
    if (!Request.IsAuthenticated)
    {
        Response.Redirect("/Home/Index");
    }
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PublicationTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PublicationAbstract)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PublicationLink)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PublicationTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PublicationAbstract)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PublicationLink)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PublicationID }) |
            @Html.ActionLink("Details", "Details", new { id=item.PublicationID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PublicationID })
        </td>
    </tr>
}

</table>
